shadowLight = 0px -1px 1px rgba(0,0,0,0.6)
colorGreyLight = #F5F5F5
colorGreyMid = #DBDBDB
colorGreyDark = #909090
colorHighlightMid = #D2D2FF
colorHighlightLight = #F0F0F5
